<h2>Forgot your password?</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post, :class => 'form-vertical' }) do |f| %>
  <%= f.input :email %>
  <%= f.button :submit, "Send me reset password instructions" %>
<% end %>

<%= render "devise/shared/links" %>
